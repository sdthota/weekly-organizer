{
  "type": "APL",
  "version": "1.7",
  "import": [
    {
      "name": "alexa-layouts",
      "version": "1.3.0"
    }
  ],
  "mainTemplate": {
    "parameters": [
      "mealData"
    ],
    "items": [
      {
        "type": "Frame",
        "backgroundColor": "#FFFFFF",
        "width": "100%",
        "height": "100%",
        "item": {
          "type": "Container",
          "direction": "column",
          "items": [
            {
              "type": "Text",
              "text": "Weekly Meal Planner",
              "style": "textStylePrimary1",
              "width": "100%",
              "textAlign": "center",
              "fontSize": "30dp",
              "paddingBottom": "20dp"
            },
            {
              "type": "GridSequence",
              "scrollDirection": "vertical",
              "width": "100%",
              "height": "85vh",
              "childWidth": "33%",
              "childHeight": "80dp",
              "numbered": false,
              "items": [
                {
                  "type": "Frame",
                  "borderColor": "black",
                  "borderWidth": 1,
                  "backgroundColor": "${data.backgroundColor}",
                  "items": [
                    {
                      "type": "TouchWrapper",
                      "onPress": [
                        {
                          "type": "SendEvent",
                          "arguments": [
                            "editMeal",
                            "${data.day}",
                            "${data.mealType}"
                          ]
                        }
                      ],
                      "item": {
                        "type": "Text",
                        "text": "${data.day} - ${data.mealType}: ${data.mealName}",
                        "padding": "8dp",
                        "fontSize": "16dp",
                        "color": "#000000"
                      }
                    }
                  ]
                }
              ],
              "data": "${mealData.meals}"
            }
          ]
        }
      }
    ]
  }
}
